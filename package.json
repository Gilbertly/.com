    "gatsby-plugin-sharp": "^2.6.0",
    "gatsby-plugin-typescript": "^2.4.0",
    "gatsby-transformer-sharp": "^2.5.0",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "less": "^3.11.1",
    "prettier": "^2.0.5",
    "react-helmet": "^6.0.0",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^17.0.7",
