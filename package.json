  "version": "0.0.1",
  "description": "Personal portfolio site",
  "main": "src/pages/index.tsx",
  "scripts": {
    "build:dev": "GIT_HASH=$(git rev-parse --short HEAD) gatsby develop",
    "build:prod": "GIT_HASH=$(git rev-parse --short HEAD) gatsby build",
    "build:serve": "gatsby serve",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "test:build": "npm audit fix && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/.com"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run test:build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "antd": "^4.1.5",
    "gatsby": "^2.21.1",
    "gatsby-source-filesystem": "^2.3.0",
