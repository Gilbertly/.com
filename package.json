    "gatsby-plugin-typescript": "^2.4.15",
    "gatsby-transformer-sharp": "^2.5.11",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "less": "^3.12.2",
    "prettier": "^2.0.5",
    "react-helmet": "^6.1.0",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
