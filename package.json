{
  "name": "gilbertly.com",
  "version": "0.0.1",
  "description": "Personal portfolio site",
  "main": "src/pages/index.tsx",
  "scripts": {
    "build:dev": "gatsby develop",
    "build:prod": "gatsby build",
    "build:serve": "gatsby serve",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "test:build": "npm audit fix && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/.com"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        72
      ],
      "footer-max-line-length": [
        2,
        "always",
        72
      ],
      "references-empty": [
        1,
        "always"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run test:build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "antd": "^3.26.8",
    "gatsby": "^2.19.12",
    "gatsby-source-filesystem": "^2.1.48",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-responsive": "^8.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.3",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-responsive": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gatsby-image": "^2.2.40",
    "gatsby-plugin-less": "^3.0.19",
    "gatsby-plugin-manifest": "^2.2.41",
    "gatsby-plugin-offline": "^3.0.34",
    "gatsby-plugin-react-helmet": "^3.1.22",
    "gatsby-plugin-sharp": "^2.4.5",
    "gatsby-plugin-typescript": "^2.1.27",
    "gatsby-transformer-sharp": "^2.3.14",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "less": "^3.10.3",
    "prettier": "^1.19.1",
    "react-helmet": "^5.2.1",
    "react-test-renderer": "^16.12.0",
    "semantic-release": "^17.0.2",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  }
}
