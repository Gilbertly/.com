    "gatsby-plugin-sharp": "^2.8.0",
    "gatsby-plugin-typescript": "^2.6.0",
    "gatsby-transformer-sharp": "^2.6.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "less": "^3.12.2",
    "prettier": "^2.1.2",
    "react-helmet": "^6.1.0",
    "react-test-renderer": "^17.0.1",
    "semantic-release": "^17.2.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  }
