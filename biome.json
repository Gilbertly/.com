{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".wrangler", ".react-email"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".wrangler", ".react-email"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
